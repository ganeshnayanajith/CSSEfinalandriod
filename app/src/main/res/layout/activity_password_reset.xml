<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordResetActivity"
    android:gravity="center_horizontal"
    android:background="@drawable/reset_background"
    android:orientation="vertical">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo1"
        android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Reset Password"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/chelsea_market"
                android:textSize="22dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Enter your email address to \nreset password"
                android:textColor="#44000000"
                android:textSize="14dp"
                app:fontFamily="@font/capriola" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:textColorHint="#79000000"
                android:layout_marginRight="60dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"
                android:hint="Email"/>


    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/login_button"
        android:fontFamily="monospace"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Reset Password"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="16dp"
        android:textStyle="bold" />


</LinearLayout>