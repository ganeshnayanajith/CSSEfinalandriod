<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >


        <GridLayout
            android:id="@+id/settings"
            android:columnCount="3"
            android:rowCount="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/order_card02"
            android:layout_weight="8"
            android:padding="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_margin="5dp"
                android:layout_columnWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                     android:gravity="center"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/home"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_horizontal"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/profileText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_margin="5dp"
                android:layout_columnWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/profile"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Profile"
                        android:gravity="center_horizontal"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_margin="5dp"
                android:layout_columnWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/logout"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_horizontal"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text="Profile"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="10dp"
                android:padding="2dp">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@drawable/boy"/>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="Name"
                    android:textColor="@color/material_blue_grey_95"
                    android:textSize="12dp"

                    />

                <EditText
                    android:id="@+id/siteManName"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/profile_edittext"
                    android:gravity="center_vertical"
                    android:hint="name"
                    android:paddingLeft="20dp"
                    android:textColor="@color/material_blue_grey_80"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="Address"
                    android:textColor="@color/material_blue_grey_95"
                    android:textSize="12dp"

                    />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="Address"
                    android:textSize="12dp"
                    android:paddingLeft="20dp"
                    android:maxLength="10"
                    android:textColor="@color/material_blue_grey_80"
                    android:layout_marginRight="30dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/profile_edittext"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="Phone no"
                    android:textColor="@color/material_blue_grey_95"
                    android:textSize="12dp"

                    />

                <EditText
                    android:id="@+id/siteManPhone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="Phone number"
                    android:textSize="12dp"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:maxLength="10"
                    android:textColor="@color/material_blue_grey_80"
                    android:layout_marginRight="30dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/profile_edittext"
                    />
            </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center_vertical"
                    android:text="Email"
                    android:textColor="@color/material_blue_grey_95"
                    android:textSize="12dp"

                    />
                <TextView
                    android:id="@+id/siteManEmail"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="email"
                    android:textSize="12dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/material_blue_grey_80"
                    android:layout_marginRight="30dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/profile_edittext"
                    />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/profile_button"
                    android:fontFamily="serif"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text="Cancel"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:text="Update"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    />



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>